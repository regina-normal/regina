 <refnamediv>
  <refname>surfaces</refname>
  <refpurpose>A normal surface list packet</refpurpose>
 </refnamediv>

 <refsynopsisdiv>
  <informaltable frame="all">
   <tgroup cols="2">
    <colspec colname="c1"/>
    <colspec colname="c2"/>
