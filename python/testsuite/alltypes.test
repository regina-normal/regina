    pass

def functionInfo(name, object):
    # print name, ': function'
    pass

def objectInfo(name, object):
    # print name, ': object'
    pass

keys = regina.__dict__.keys()
keys.sort()

for i in keys:
    object = regina.__dict__[i]
    if isinstance(object, type):
        try:
            if 'Boost.Python.enum' in str(object.name):
                enumInfo(i, object)
            else:
                classInfo(i, object)
        except:
            classInfo(i, object)
    elif 'builtin_function_or_method' in str(object.__class__):
        functionInfo(i, object)
    else:
        objectInfo(i, object)
