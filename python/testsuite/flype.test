def test(g):
	for n in g.nodes():
		for i in range(4):
			start = n.arc(i)
			args = g.findFlype(start)
			if args[0]:
				f = g.flype(start, args[0], args[1])
				if (g.size() <= 52):
					s = f.plantri()
				else:
					s = str(f)
				print(n.index(), i, s)
	print()

test(ExampleLink.figureEight().graph())
test(ExampleLink.whitehead().graph())
test(ExampleLink.gst().graph())
