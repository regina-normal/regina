b = b'asdf'
s = regina.base64Encode(b)
print(s)
b2 = regina.base64Decode(s)
print(b == b2)

b = b'a\0df'
s = regina.base64Encode(b)
print(s)
b2 = regina.base64Decode(s)
print(b == b2)

b = b'\0\0\0\0\0'
s = regina.base64Encode(b)
print(s)
b2 = regina.base64Decode(s)
print(b == b2)

b = b'\0\0\0\0\0\0'
s = regina.base64Encode(b)
print(s)
b2 = regina.base64Decode(s)
print(b == b2)

print(regina.base64Decode('!!')) # should be None

print()

