print(e)
print(e.inverse())
print(e.power(-2))
print(e.power(-1))
print(e.power(0))
print(e.power(1))
print(e.power(2))
dummy = e.substitute(3, GroupExpression('Eg'))
print(e)
dummy = e.substitute([GroupExpression('aB'), \
                      GroupExpression('c'), \
                      GroupExpression(''), \
                      GroupExpression('B^2'), \
                      GroupExpression('A'), \
                      GroupExpression('g'), \
                      GroupExpression('f')])
print(e)

e = GroupExpression('a^7dB^2D')
e.addTermsLast(GroupExpression('c^2D'))
e.addTermsFirst(GroupExpression('E^2f'))
print(e)

e = GroupExpression('a^7dB^2D')
e.addTermsFirst(e)
e.addTermsLast(e)
