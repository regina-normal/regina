import sys
if (len(sys.argv) > 1):
    testpath = sys.argv[1]
else:
    testpath = '.'

def testOrb(filename):
    print('Orb file:', filename)
    print(readOrb(testpath + '/' + filename).detail())
    print()

testOrb('cube.orb')
testOrb('dodec.orb')
testOrb('knotted-Y.orb')
testOrb('italian.orb')
testOrb('theta_in_solid_torus.orb')
