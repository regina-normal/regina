p = Polynomial([2,3,4,5])
print(p)
p.leading().negate() # should do nothing due to constness
print(p)
p[2].negate() # should do nothing due to constness
print(p)
p[1] = 7; # should work
print(p)
print()

p = Laurent(-1, [2,3,4,5])
print(p)
p[1].negate() # should do nothing due to constness
print(p)
p[1] = 7; # should work
print(p)
print()

p = Laurent2(2,3)
